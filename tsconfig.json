{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@prisma/client": ["./generated/prisma_client/client"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "generated"]
}